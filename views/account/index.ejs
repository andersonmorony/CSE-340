<% if (title) { %>
    <h1 class="title-page"><%= title %></h1>
    <% } else { res.redirect('/') } %> 
    
    <%- messages() %>
    
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
<div id="main-content">
  <h1>You're logged in</h1>
  <h2>Welcome <% if(accountData) {%> <%= accountData.account_type  %> <% } %> </h2>
  
  <% if(accountData.account_type !== "Client") { %>
    
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/management">Inventory Management</a>
    </p>
    
  <% } %> 
  
  <h3>Update account information</h3>
  <a href="/account/update-account/<%= accountData.account_id %>">My Account</a>
</div>

