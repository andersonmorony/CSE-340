<% if (title) { %>
    <h1><%= title %></h1>
    <% } else { res.redirect('/') } %>
    
    <%- messages() %>

    <% if (errors) { %>
        <ul class="error">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
    <% } %>
    
    <div id="form-classification" class="form">
        
        <form action="/inv/delete" method="post">
            <div class="form-control">
                <label for="inv_make">Make</label>
                <input readonly type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" />
            </div>
            <div class="form-control">
                <label for="inv_model">Model</label>
                <input readonly type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" />
            </div>
            <div class="form-control">
                <label for="inv_year">Year</label>
                <input readonly type="number" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" />
            </div>
            <div class="form-control">
                <label for="inv_price">Price</label>
                <input readonly type="number" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>"/>
            </div>
            <input type="hidden" name="inv_id"
                <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
            <div class="form-submit">
                <button type="submit">Delete</button>
                <p>Confirm Deletion - The delete is permanent.</p>
            </div>
        </form>
    </div>
